# إعدادات السيرفر - حل مشكلة تسجيل الدخول
FLASK_ENV=production
FLASK_APP=app.py

# مفتاح الجلسة - يجب أن يكون فريد وطويل
SESSION_SECRET=al-7esa-super-secure-secret-key-2024-production

# تعطيل CSRF مؤقتاً لحل مشكلة تسجيل الدخول
WTF_CSRF_ENABLED=False
WTF_CSRF_CHECK_DEFAULT=False

# إعدادات الجلسة للسيرفر
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=604800

# قاعدة البيانات
DATABASE_URL=sqlite:///al-7esa.db

# CORS للسيرفر
CORS_ORIGINS=*
CORS_SUPPORTS_CREDENTIALS=True
